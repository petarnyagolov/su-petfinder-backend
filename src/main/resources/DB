CREATE DATABASE petfinder  CHARACTER SET utf8 COLLATE UTF8_GENERAL_CI;
USE petfinder;
CREATE TABLE IF NOT EXISTS `breeds` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT,
  `key` varchar(70) NOT NULL,
   `format` ENUM('xml','json') DEFAULT 'xml',
	`animal` VARCHAR(70) NOT NULL ,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB  DEFAULT CHARSET=UTF8;

CREATE TABLE IF NOT EXISTS `shelters` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT,
  `key` varchar(70) NOT NULL,`name` VARCHAR(70) NOT NULL,
   `format` ENUM('xml','json') DEFAULT 'xml',
	`location` VARCHAR(70) NOT NULL ,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB  DEFAULT CHARSET=utf8;

CREATE TABLE IF NOT EXISTS `pets` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT,
  `key` varchar(70) NOT NULL,
  `pic` VARCHAR(70) DEFAULT NULL,
  `name` VARCHAR(70) DEFAULT NULL,
  `sex` VARCHAR(1) NOT NULL,
  `shelter_id` bigint(20) NOT NULL,
  `breed_id` BIGINT(20) DEFAULT NULL,
  `type_animal` ENUM('barnyard','bird','car','dog','horse','reptile','smallfurry') DEFAULT NULL,
   `format` ENUM('xml','json') DEFAULT 'xml', 
	FOREIGN KEY (breed_id) REFERENCES breeds(id),
  PRIMARY KEY (`id`)
) ENGINE=InnoDB  DEFAULT CHARSET=UTF8;

